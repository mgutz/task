{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": ["node"],
  "rules": {
    "max-len": [
      1,
      80,
      2,
      {
        "ignoreComments": true
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "node/exports-style": ["error", "module.exports"]
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"]
}
