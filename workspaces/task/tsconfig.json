{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "esnext"], // es2017 needed for object.values
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*.js", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
